<div class="createpost">
<h2>New Post</h2>
<div class="form">
    <%= form_with model: @posts do |form| %>
    <div class="input">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div> 
    <div class="input">
        <%= form.label :body %>
        <%= form.text_area :text %>
    </div>
    </div>
    <a class="createposts-btn">
        <%= form.submit "Add new Post" %>
    </a>
    <% end %>
</div>